clearfix()
  &:before,
  &:after
    content ''
    display table
  &:after
    clear both

.vue-dialog
  word-break break-word

.crip-loading
  background linear-gradient(left, #0ce4e1, #d855ff) !important
  height 3px !important

span.on-testnet
  display inline-block
  background-color lighten(info-color, 10)
  border 1px solid info-color
  font-size 11px
  font-weight bold
  text-transform uppercase
  color black
  padding 4px 4px 2px
  vertical-align top
  animation net 1s infinite

.loading
  logo-size = 16px
  // background-color lighten(black, 8)
  text-align center
  display table
  width 100%
  padding 15px 10px
  margin 15px 0
  .progress
    display inline-block
    position relative
    width: logo-size * 1.1875
    margin-right 10px
    height @width
  .text
    display table-cell
    vertical-align middle
    color steel
    font-size: (logo-size * .75)
    letter-spacing 1px
    text-transform uppercase
    line-height: (logo-size * 1.2)
    > *
      vertical-align top
  .mis
  .kre
    width logo-size
    position absolute
  .mis
    left 0
    animation-name mis
    animation-duration 1s
    animation-iteration-count infinite
    animation-direction both
  .kre
    right 0
    animation-name kre
    animation-duration 1s
    animation-iteration-count infinite
    animation-direction both

pre.debug
  overflow-x scroll

.script
  margin-bottom 15px
  > span
    font-size 12px
    text-transform uppercase
    font-weight bold
  pre
    margin 5px 0 0 0
    background-color black
    overflow hidden
    white-space normal
    word-break break-word

.blocks
.transactions
  margin 0
  padding 0
  list-style none
  > li
    padding 10px 0
    &:not(:last-child)
      border-bottom 1px solid #1a1a1a
  .time
    color monsoon
  .type
    color steel
    font-size 12px
    margin-bottom 3px
  .txid
  .hash
    display block
    max-width 100%
    text-overflow ellipsis
    white-space nowrap
    overflow hidden

dl.info
  clearfix()
  dt
    width 30%
    float left
    clear left
    font-size 12px
    text-transform uppercase
  dd
    width 70%
    float left
    color white

.navigator
  font-size 0
  margin-bottom 20px
  .previous
  .next
    display inline-block
    width 42px
    height @width
    color white
    background-color black
    text-align center
    line-height @height
    transition background-color .5s ease-in-out
    font-size 12px
    &:hover
      background-color lighten(black, 5)
    &:not(:last-child)
      margin-right 1px

ul.balances
  margin 0
  padding 0
  list-style none
  > li
    display block
    background-color lighten(black, 8)
    padding 10px 15px 5px
    &:not(:last-child)
      margin-bottom 10px
    .name
      font-size 12px
      color base
    .status
      margin-top 5px
      color snow
      font-size 12px
      .asset
        font-size 14px

.asset
  display inline-block
  .integer
  .point
  .fractional
    font-family font-family-monospace
    color white
    font-weight bold
  .integer
    font-size 1.1em
  .point
  .fractional
    font-size 1em
  .symbol
    font-weight normal
    font-size 12px
    color base
    margin-left 5px

.wallet-info
  .address
    color white
    font-weight bold
    font-family font-family-monospace
    font-size 15px

ul.faqs
  margin-bottom 10px
  > li:not(:last-child)
    margin-bottom 15px
  .question
    color snow
    margin-bottom 10px
    cursor pointer
