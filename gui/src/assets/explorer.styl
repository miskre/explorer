@import 'gia.ui/gia.ui'
@import 'scroller'

border-style = 1px solid smoke

html
body
  background-color #111

body
  background-image url(bulb.jpeg)
  min-height 100vh
  background-color #222
  background-repeat no-repeat
  background-size cover

label
  color tuatara
  font-size 12px
  display block
  margin-bottom 10px
  > :first-child
    margin-top 5px
    color jet
    font-size 13px
    font-weight bold
    font-family font-family-monospace

a
  cursor pointer

a.hash
  color active-color

#desktop
  position relative
  z-index 1
  ul.icons
    margin 0
    padding 0
    list-style none
    position absolute
    top 30px
    right 20px
    > li
      display block
      &:not(:last-child)
        margin-bottom 15px
  .frame
    width 100px
    text-align center
    img
      max-height 48px
      filter drop-shadow(0px 3px 5px rgba(black, .33))
    .label
      font-family font-family-monospace
      display inline-block
      color white
      font-weight bold
      font-size 12px
      background-color rgba(black, .7)
      padding 2px 7px
      border-radius radius

#windows-manager
  position relative
  z-index 2

  .overlay
    position fixed
    top 0
    right 0
    bottom 0
    left 0
    pointer-events none
    @media small-only
      position initial

  .window
    small-padding = 20px
    medium-padding = 25px
    large-padding = 30px
    padd()
      padding-left small-padding
      padding-right @padding-left
      @media medium
        padding-left medium-padding
        padding-right @padding-left
      @media large
        padding-left large-padding
        padding-right @padding-left
    transition opacity .5s ease-in-out
    position absolute
    background-color #1a1a1a
    max-width 100%
    box-shadow 0 20px 40px 0 rgba(black, .2)
    pointer-events all
    max-height 100vh
    @media small-only
      max-height none
      position initial
    h1
      font-size 16px
      font-weight bold
      color black
    p
      color tuatara
      font-size 13px
    pre
      background-color lighten(black, 5)
      border-radius 0
      word-break break-all
      white-space normal
    code
      font-family font-family-monospace
      font-size 12px
    .{grid-container-class}
      overflow-x hidden
    .debug
      margin 0
    .guide
      *
        font-family font-family-monospace
    .padding
      padd()
    .x
      display block
      width 35px
      heigh @width
      text-align center
      color white
      cursor pointer
      line-height @width
      position absolute
      background-color lighten(#111, 2)
      right 0
      top 0
      z-index 1
    .title
      .big
        height 100px
        overflow-x hidden
        position relative
        cursor normal
      .small
        color white
        padding 10px
        font-size 12px
        font-weight bold
        cursor normal
      em
        position absolute
        font-size 80px
        font-weight bold
        color #222222
        font-style normal
        top -10px
        left -20px
        pointer-events none
      img.logo
        margin 40px 0 0 30px
        position relative
        width 96px
        z-index 1

  .part-title
    color jet
    font-weight bold
    font-size 11px
    text-transform uppercase
    margin-bottom 10px

  ul.info-bar
    background-color #111
    margin 0
    padding 0
    list-style none
    font-size 0
    > li
      position relative
      display inline-block
      padding 10px 15px
      &:not(:last-child)
        &:after
          content ''
          display block
          width 1px
          position absolute
          top 12px
          bottom @top
          right 0
          background-color #1a1a1a
      .name
        font-size 10px
        color steel
        text-transform uppercase
      .value
        font-size 13px
        color smoke

  .content
    background-color darken(white, 1)

  .blocks-panel
    @media medium
      height 440px

  .block-panel
    .hash
      font-weight bold
      font-size 13px
      font-family font-family-monospace
    .invocation
    .verification
      background-color lighten(active-color, 55)
      border-color darken(@background-color, 10)
    ul.transactions
      margin 0 0 20px 0
      padding 0
      list-style none
      > li
        color tuatara
        padding 5px 0
        &:not(:last-child)
          border-bottom border-style
      .type
        font-size 12px

  .navigations
    clearfix()
    font-size 12px
    color snow
    .previous
    .next
      cursor pointer
    .previous
      float left
      &:before
        content '⟵'
        margin-right 5px
    .next
      float right
      &:after
        content '⟶'
        margin-left 5px

  .transactions-panel
    @media medium
      height 440px

  ul.blocks
  ul.transactions
    margin 0
    padding 0
    list-style none
    li
      padding 8px 0
      &:not(:last-child)
        border-bottom border-style
    .name
      color active-color
      font-weight bold
      cursor pointer
      font-family font-family-monospace
      font-size 13px
    .time
      color tuatara
      font-size 12px